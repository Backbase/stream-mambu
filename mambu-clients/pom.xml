                                <id>mambu-deposit-transactions</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <generatorName>java</generatorName>
                                    <inputSpec>${project.basedir}/../api/deposit_transactions_v2_swagger.json
                                    </inputSpec>
                                    <generateSupportingFiles>${openapi-generator-maven-plugin.hideGenerationTimestamp}
                                    </generateSupportingFiles>
                                    <generateModelTests>false</generateModelTests>
                                    <generateModelTests>false</generateModelTests>
                                    <generateApiTests>false</generateApiTests>
                                    <skipValidateSpec>true</skipValidateSpec>
                                    <output>
                                        ${openapi-generator-maven-plugin.outputBaseDir}/mambu-deposit-transactions-client
                                    </output>
                                    <skipOverwrite>true</skipOverwrite>
                                    <configOptions>
                                        <library>webclient</library>
                                        <reactive>${openapi-generator-maven-plugin.hideGenerationTimestamp}</reactive>
                                        <java8>${openapi-generator-maven-plugin.hideGenerationTimestamp}</java8>
                                        <hideGenerationTimestamp>
                                            ${openapi-generator-maven-plugin.hideGenerationTimestamp}
                                        </hideGenerationTimestamp>
                                        <dateLibrary>${openapi-generator-maven-plugin.dateLibrary}</dateLibrary>
                                        <modelPackage>com.backbase.mambu.deposit.transactions.model</modelPackage>
                                        <apiPackage>com.backbase.mambu.deposit.transactions.api</apiPackage>
                                        <groupId>com.backbase.mambu</groupId>
                                        <artifactId>mambu-deposit-transactions-client</artifactId>
                                        <artifactVersion>${project.version}</artifactVersion>
                                        <parentGroupId>${openapi-generator-maven-plugin.parentGroupId}</parentGroupId>
                                        <parentArtifactId>${openapi-generator-maven-plugin.parentArtifactId}
                                        </parentArtifactId>
                                        <parentVersion>${openapi-generator-maven-plugin.parentVersion}</parentVersion>
                                        <models/>
                                    </configOptions>
                                </configuration>
                            </execution>
