                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-clean-plugin</artifactId>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>
                                        ${project.basedir}/generated-clients
                                    </directory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </plugin>
